{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Producer OS Configuration",
  "description": "Schema for Producer OS configuration file.",
  "type": "object",
  "properties": {
    "inbox": {
      "type": "string",
      "description": "Path to the inbox directory"
    },
    "hub": {
      "type": "string",
      "description": "Path to the hub directory"
    },
    "theme": {
      "type": "string",
      "description": "UI theme (dark, light, system)"
    },
    "ignore_rules": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of file or folder names/prefixes to ignore"
    },
    "normalize_pack_name": {
      "type": "boolean",
      "description": "Whether to normalize pack names when sorting"
    },
    "portable_mode": {
      "type": "boolean",
      "description": "Override to enable portable mode"
    },
    "developer_tools": {
      "type": ["boolean", "object"],
      "description": "Developer options such as verbose logging",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
