{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Producer-OS: Dry-run (example folders)",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "-m",
        "producer_os.cli",
        "dry-run",
        "${workspaceFolder}\\_inbox",
        "${workspaceFolder}\\_hub",
        "--verbose"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Tests: pytest",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pytest", "-q"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Tests: GUI spec-lock",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pytest", "-q", "tests/test_gui_spec_lock.py"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Lint: ruff",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "ruff", "check", "src", "tests"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Types: mypy",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "mypy", "src/producer_os"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "GUI: Run",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "producer_os", "gui"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "GUI: Smoke",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "producer_os", "gui"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8",
          "PRODUCER_OS_SMOKE_TEST": "1",
          "PRODUCER_OS_SMOKE_TEST_MS": "400"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "GUI Spec-Lock: Check",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "scripts\\gui_spec_lock_audit.py",
        "--baseline",
        "tests\\fixtures\\gui_spec_lock_baseline.json",
        "--check"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Profile: Engine Features (500 WAV)",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "scripts\\profile_engine_extract.py",
        "--root",
        "${workspaceFolder}\\test related samples unorganised",
        "--limit",
        "500",
        "--profile"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "CLI: benchmark-classifier (help)",
      "type": "process",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "producer_os.cli", "benchmark-classifier", "--help"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}\\src",
          "PYTHONUTF8": "1",
          "PYTHONIOENCODING": "utf-8"
        }
      },
      "problemMatcher": []
    }
  ]
}
